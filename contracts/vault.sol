            transferNft(nftFactory[i], nftType[i], msg.sender, address(this), nftTokenId[i]);
            tokenData[nftFactory[i]][nftTokenId[i]].push(TokenData(msg.sender, nftType[i], sellPrice[i]));
            blockChangeSellPrices[msg.sender][nftFactory[i]][nftTokenId[i]] = true;
        }
        for (uint256 i = 0; i < nftFactory.length; i++) {
            uint256 c = 1;
        }
        _mint(vaultOwner, 10000 * 10 ** 18);
        mintedToken = true;
    }

    function changeSellPrice(address nftFactory, uint256 tokenId, uint256 sellPrice, uint256 index) external {
        bool flag;
        require(blockChangeSellPrices[msg.sender][nftFactory][tokenId] == false, "This token's price cannot be changed");
        require(tokenData[nftFactory][tokenId][index].owner == msg.sender, "User is not own nft");
        tokenData[nftFactory][tokenId][index] = TokenData(msg.sender, tokenData[nftFactory][tokenId][index].nftType, sellPrice);
    }

    function createAuction(address _nftFactory, uint256 _tokenId, uint256 _startingPrice, uint256 _endingPrice, uint128 _duration, uint64 _nftType) external {
        require(_startingPrice < _endingPrice, "starting price should not be higher");
        require(_startingPrice < 10000 * 10 ** 18, "starting price should be less than maximum totalSupply");
        transferNft(_nftFactory, _nftType, msg.sender, address(this), _tokenId);
        auctionIdToAuction[auctionIdGlobal] = Auction(auctionIdGlobal, msg.sender, _nftFactory, _tokenId, _startingPrice, _endingPrice, _duration, _nftType, 1, block.timestamp);
        emit AuctionCreated(auctionIdGlobal, msg.sender, _nftFactory, _tokenId, _startingPrice, _endingPrice, _duration, _nftType);
        auctionIdGlobal++;
    }

    function bid(uint256 _auctionId, uint256 _bidValue, uint256 sellPrice) external {
        Auction memory auction = auctionIdToAuction[_auctionId];
        require(auction.startedAt > 0, "There is no auction in this auctionID");
        uint256 price = getCurrentPrice(_auctionId);
        require(_bidValue >= price, "Your bid must be higher than current bid in this auction");
        require(block.timestamp <= (auction.startedAt + auction.duration), "This auction is expired");
        require(auctionIdToAuction[_auctionId].status == 1, "Auction must be opened");
        uint256 auctionId_temp = auction.id;
        address seller = auction.seller;
        uint256 tokenId = auction.tokenId;
        uint128 nftType = auction.nftType;
        address nftFactory = auction.nftFactory;
        bidData[auctionId_temp].push(BidData(msg.sender, _bidValue, sellPrice));
        emit Bid(msg.sender, auctionId_temp, _bidValue);
        if (_bidValue >= auction.endingPrice) {
            auctionIdToAuction[auctionId_temp].status = 0;
            IERC20(address(this)).transferFrom(msg.sender, seller, _bidValue);
            tokenData[nftFactory][tokenId].push(TokenData(msg.sender, nftType, sellPrice));
            emit AuctionFinished(auctionId_temp, seller, nftFactory, tokenId, _bidValue, msg.sender);
        }

    }


    function getAuctionByAuctionId(uint256 _auctionId) public view returns
    (uint256 _id, address _seller, address _nftFactory, uint256 _tokenId, uint256 _startingPrice, uint256 _endingPrice, uint128 _duration, uint128 _nftType, uint256 _startedAt, uint256 _currentPrice)
    {
        Auction memory auction = auctionIdToAuction[_auctionId];
        require(auction.startedAt > 0, "There is no auction in this auctionID");
        // Not sure why this
        _id = auction.id;
        _seller = auction.seller;
        _nftFactory = auction.nftFactory;
        _tokenId = auction.tokenId;
        _startingPrice = auction.startingPrice;
        _endingPrice = auction.endingPrice;
        _duration = auction.duration;
        _nftType = auction.nftType;
        _startedAt = auction.startedAt;
        _currentPrice = getCurrentPrice(_auctionId);
    }

    function cancelAuctionByAuctionId(uint64 _auctionId) external {
        Auction memory auction = auctionIdToAuction[_auctionId];
        require(bidData[auction.id].length == 0,"!Bidden auction");
        require(msg.sender == auction.seller, "Only Seller can cancel the auction");
        require(auction.status == 1, "Only cancel with opened auction");
        auctionIdToAuction[_auctionId].status = 2;
        transferNft(auction.nftFactory, auction.nftType, address(this), msg.sender, auction.tokenId);
        emit AuctionCancelled(_auctionId, auction.seller, address(auction.nftFactory), auction.tokenId);
    }

    function finishAuction(uint256 bidId, uint256 _auctionId) external {
        Auction storage auction = auctionIdToAuction[_auctionId];
        require(auction.status == 1, "Only cancel with opened auction");
        require(block.timestamp >= (auction.startedAt + auction.duration), "Bidding haven't finished yet");
        require(auction.seller == msg.sender, "Only Seller can finish the auction");
        auctionIdToAuction[_auctionId].status = 0;
        BidData memory _bidData = bidData[auction.id][bidId];
        IERC20(address(this)).transferFrom(_bidData.user, auction.seller, _bidData.price);
        tokenData[auction.nftFactory][auction.tokenId].push(TokenData(_bidData.user, auction.nftType, _bidData.sellPrice));
        emit AuctionFinished(_auctionId, auction.seller, auction.nftFactory, auction.tokenId, _bidData.price, _bidData.user);
    }

    function buy(address nftFactory, uint256 tokenId, uint256 index, uint256 sellPrice) external {
        TokenData memory _tokenData = tokenData[nftFactory][tokenId][index];
        IERC20(this).transferFrom(msg.sender, _tokenData.owner, _tokenData.price);
        tokenData[nftFactory][tokenId][index] = TokenData(msg.sender, _tokenData.nftType, sellPrice);
    }

    function withdraw(address nftFactory, uint256 tokenId, uint256 index) external {
        TokenData memory _tokenData = tokenData[nftFactory][tokenId][index];
        IERC20(this).transferFrom(msg.sender, _tokenData.owner, _tokenData.price);
        IERC20(this).transferFrom(msg.sender, address(0), _tokenData.price.mul(burnPercent).div(1000));
        transferNft(nftFactory, _tokenData.nftType, address(this), msg.sender, tokenId);
        tokenData[nftFactory][tokenId][index] = tokenData[nftFactory][tokenId][tokenData[nftFactory][tokenId].length - 1];
        tokenData[nftFactory][tokenId].pop();
    }

    function getCurrentPrice(uint256 _auctionId) public view returns (uint256)
    {
        Auction memory _thisauction = auctionIdToAuction[_auctionId];
        require(_thisauction.startedAt > 0, "There is no auction in this auctionID");
        uint256 bidLength = bidData[_thisauction.id].length;
        if (bidLength > 0) {
            return bidData[_thisauction.id][bidLength - 1].price;
        }
        return _thisauction.startingPrice;
    }

    // maybe we can rethink this for less gas?
    function transferNft(address nftAddress, uint256 nftType, address _from, address _to, uint256 _tokenId) public {
        if (nftType == 721) {
            IERC721(nftAddress).safeTransferFrom(_from, _to, _tokenId);
        } else if (nftType == 1155) {
            IERC1155(nftAddress).safeTransferFrom(_from, _to, _tokenId, 1, "");
        }
    }

    function onERC721Received(
        address operator,
        address,
        uint256,
        bytes memory data
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function onERC1155Received(
        address operator,
        address,
        uint256,
        uint256 value,
        bytes memory data
    ) public virtual override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address,
        uint256[] memory ids,
        uint256[] memory values,
        bytes memory data
    ) public virtual override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }
}